{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.ts", "src/vite-env.d.ts"]
}
